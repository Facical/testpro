<UserControl x:Class="testpro.Views.Viewer3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helix="http://helix-toolkit.org/wpf">
    <Grid>
        <helix:HelixViewport3D x:Name="ViewportMain" 
                               Background="LightGray"
                               ShowFrameRate="True"
                               ShowCoordinateSystem="True"
                               MouseWheel="ViewportMain_MouseWheel">
            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera x:Name="CameraMain"
                                   Position="50,50,50"
                                   LookDirection="-50,-50,-50"
                                   UpDirection="0,0,1"
                                   FieldOfView="60"/>
            </helix:HelixViewport3D.Camera>
        </helix:HelixViewport3D>

        <!-- 컨트롤 패널 -->
        <Border Background="#AA000000" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10" 
                CornerRadius="5"
                Padding="10">
            <StackPanel>
                <TextBlock Text="3D 뷰 컨트롤" 
                          Foreground="White" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"/>
                <TextBlock Text="• 마우스 휠: 확대/축소" 
                          Foreground="White" 
                          FontSize="11"/>
                <TextBlock Text="• 왼쪽 버튼 드래그: 회전" 
                          Foreground="White" 
                          FontSize="11"/>
                <TextBlock Text="• 오른쪽 버튼 드래그: 이동" 
                          Foreground="White" 
                          FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>